<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
    parent="parent-list-flow">

    <view-state id="entityList" view="symptomTypeList.jsp">
        <on-render>
            <evaluate expression="adminService.getSymptomTypeList()" result="flowScope.symptomTypes"></evaluate>
        </on-render>
    </view-state>
    
    <action-state id="deleteEntity">
        <on-entry>
            <set name="flowScope.entity" value="requestParameters.entity" 
                type="com.selfdiagnosis.core.entity.SymptomTypeEntity"/>
        </on-entry>
    </action-state>
    
    <subflow-state id="editEntity" subflow="symptomType">
        <on-entry>
            <set name="flowScope.symptom" value="requestParameters.symptom" 
                type="com.selfdiagnosis.core.entity.SymptomTypeEntity"/>
        </on-entry>
    </subflow-state>
</flow>